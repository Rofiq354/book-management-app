<table
  class="min-w-full border border-gray-200 hidden md:table"
  id="authorsTable"
>
  <thead class="bg-gray-100">
    <tr>
      <th class="px-4 py-2 text-left text-gray-700">ID</th>
      <th class="px-4 py-2 text-left text-gray-700">Author Name</th>
      <th class="px-4 py-2 text-center text-gray-700">
        <div class="flex items-center justify-center gap-1">
          Total Book
          <button class="flex flex-col text-gray-400 hover:text-indigo-600">
            <a href="#" id="bookTotalUp"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-3 h-3"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path d="M10 3l5 6H5l5-6z" /></svg
            ></a>
            <a href="#" id="bookTotalDown"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-3 h-3 -mt-1"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path d="M10 17l-5-6h10l-5 6z" /></svg
            ></a>
          </button>
        </div>
      </th>
      <th class="px-4 py-2 text-left text-gray-700">Created At</th>
      <th class="px-4 py-2 text-center text-gray-700">Action</th>
    </tr>
  </thead>
  <tbody>
    <% if (authors.length === 0) { %>
    <tr>
      <td colspan="5" class="px-4 py-2 text-center bg-gray-50">
        Tidak menemukan data
      </td>
    </tr>
    <% } %> <% authors.forEach(data => { %>
    <tr class="border-t hover:bg-gray-50" data-id="<%= data.id %>">
      <td class="px-4 py-2"><%= data.id %></td>
      <td class="px-4 py-2 tableTdName"><%= data.name %></td>
      <td class="px-4 py-2 text-center">
        <%= data.books.length %>
      </td>
      <td class="px-4 py-2 text-gray-500 text-sm">
        <%= data.createdAt ? new Date(data.createdAt).toLocaleDateString() :
        '-'%>
      </td>
      <td class="px-4 py-2 text-center">
        <div class="flex justify-center items-center gap-3">
          <!-- Edit button -->
          <a
            href="/authors/edit-<%= data.id %>"
            class="text-blue-600 hover:text-blue-800 transition"
            title="Edit Book"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-7 h-7"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15.232 5.232l3.536 3.536M9 11l6.732-6.732a2.121 2.121 0 113.002 3.002L12 14l-3 1 1-3z"
              />
            </svg>
          </a>

          <!-- Delete button -->
          <button
            class="text-red-600 hover:text-red-800 transition"
            title="Delete Author"
            onclick="return openDeleteModal(`<%= data.id %>`, 'authors', `<%= data.name %>`)"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M9 4h6m2 0h-2m-6 0H7m2 0V3a1 1 0 011-1h4a1 1 0 011 1v1"
              />
            </svg>
          </button>
        </div>
      </td>
    </tr>
    <% }) %>
    <!-- Tambahkan baris dinamis di sini -->
  </tbody>
</table>


<div class="md:hidden space-y-3">
  <% authors.forEach(b => { %>
  <div class="border rounded-xl shadow-sm p-3 bg-white">
    <!-- Header -->
    <div class="flex justify-between items-center">
      <h3 class="font-semibold text-gray-800"><%= b.name %></h3>

      <button class="text-gray-600" onclick="toggleDetail('<%= b.id %>')">
        <span id="arrow-<%= b.id %>">â–¼</span>
      </button>
    </div>

    <!-- Detail Section -->
    <div
      id="detail-<%= b.id %>"
      class="overflow-hidden max-h-0 transition-all duration-300"
    >
      <div class="mt-3 space-y-2">
        <div class="flex justify-between text-sm border-b pb-1">
          <span class="text-gray-500">Book Total</span>
          <span class="font-medium"><%= b.books.length %></span>
        </div>

        <div class="flex justify-between text-sm border-b pb-1">
          <span class="text-gray-500">Created</span>
          <span class="font-medium text-gray-500 text-sm"><%= b.createdAt ? new Date(b.createdAt).toLocaleDateString() : '-'%></span>
        </div>

        <!-- Actions -->
        <div class="flex justify-end gap-3 pt-2">
          <a
            href="/books/edit-<%= b.id %>"
            class="text-blue-600 text-sm flex items-center gap-1"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" fill="none" viewBox="0 0 24 24"
							stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round"
								d="M15.232 5.232l3.536 3.536M9 11l6.732-6.732a2.121 2.121 0 113.002 3.002L12 14l-3 1 1-3z" />
						</svg> Edit
          </a>
          <button
            onclick="openDeleteModal('<%= b.id %>','authors', '<%= b.title %>')"
            class="text-red-600 text-sm flex items-center gap-1"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24"
							stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round"
								d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M9 4h6m2 0h-2m-6 0H7m2 0V3a1 1 0 011-1h4a1 1 0 011 1v1" />
						</svg> Delete
          </button>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>