<%- include('./form') %>

<h1>Daftar Buku</h1>
<table border="2">
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Stock</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% datas.forEach(data => { %>
    <tr>
      <td><%= data.title %></td>
      <td><%= data.authorName %></td>
      <td><%= data.stock %></td>
      <td>
        <a href="/books/edit-<%= data.id %>">edit</a> |
        <!-- <form action="/books/delete-:id" method="post">
          <button type="submit">delete</button>
        </form> -->
        <a onclick="return openDeleteModal(`<%= data.id %>`, `<%= data.title %>`)">delete</a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../layouts/partials/deleteModal') %>
